    <body class="cardboard" id="body">

        <section id="main">
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <div class="header">
                            <div class="header-left">
                                <div class="avatar">
                                    <img src="/img/globe.png">
                                </div>
                            </div>

                            <div class="header-right">
                                <div class="name"><%= user.username %></div>
                                <div class="location">
                                    <a href="/sign-out"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Выход</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row text-left">
                    <div class="span12">
                        <div class="projects">

                            <div class="project-container">
                                <div class="project-shot">
                                    <a href="#">                                  
                                        <div class="color-block green">
                                            <h4>Проект 1</h4>
                                        </div>
                                    </a>
                                </div>
                                <div class="project-description">
                                    <div class="name">Проект 1</div>
                                    <div class="desc">
                                        Описание проекта 
                                    </div>
                                </div>
                                <div class="project-stats">
                                    <span class="views">
                                        <a href="/map1" class="tip">
                                            <span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span>
                                        </a> 
                                    </span>
                                </div>
                            </div>     

                            <div class="project-container">
                                <div class="project-shot">
                                    <a href="#">                                  
                                        <div class="color-block roza">
                                            <h4>Проект 2</h4>
                                        </div>
                                    </a>
                                </div>
                                <div class="project-description">
                                    <div class="name">Проект 2</div>
                                    <div class="desc">
                                        Описание проекта 
                                    </div>
                                </div>
                                <div class="project-stats">
                                    <span class="views">
                                        <a href="/map2" class="tip">
                                            <span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span>
                                        </a> 
                                    </span>
                                </div>
                            </div> 

                        </div>
                    </div>
                </div>
            </div>            
        </section>

